<script src="/socket.io/socket.io.js"></script>
  <script>
    $(document).ready(function() {
      var socket = io();

      const approvebtn = document.getElementById('approve-btn');

      approvebtn.addEventListener('click', sendMessage);

      function sendMessage() {
        const firstName = document.getElementById('form3Example1m').value;
        const lastName = document.getElementById('form3Example1n').value;
        const phoneNumber = document.getElementById('phone-number').value;
        const message = document.getElementsByClassName('message')[0].value;
        const manager = $('#framework').find(':selected').attr('data-manager-id');

        const fullMessage = `Name: ${firstName} ${lastName}\nPhone: ${phoneNumber}\nMessage: ${message}`;
        
        socket.emit('message', { message: fullMessage, manager: manager });
      }
    });
  </script>

