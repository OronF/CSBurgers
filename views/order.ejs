<body>
    
    <header class="title">
        <h1 class="page-title">תפריט המסעדה</h1>
    </header>

        <aside class="categories-aside">

            <ul class="categories">
                    
            </ul>
        </aside>
        
            <section class="hide" id="dishesSection">
                <ul class="dishes-list row tile-me">
                    
                </ul>
            </section>

            <section class="nohide" id="mealsSection">
                <ul class="meals-list row tile-me">
    
                </ul>
            </section>
            <div class="card" id = "order" style="width: 18rem;">
                <div class="card-body" id = "orderBody" style ="width: 18rem;">
                  <h2 class="Sum" style ="width: 18rem;">סיכום הזמנה</h2>
                </div>
                <div class = "list-group list-group-flush">
                  <p class="SumOrder" id = "delivery">משלוח ל:</p>
                  <p class="SumOrder" id = "branch">סניף:</p>
                  <p class="SumOrder" id = "time">זמן הגעה:</p>
                </div>

                <div class="products">
                    מוצרים להזמנה
                    <ul class="products-list">

                    </ul>
                </div>

                <div class = "list-group list-group-flush">
                    <p class="SumOrder">מחיר משלוח:</p>
                    <p class="SumOrder">מחיר הזמנה:</p>
                    <p class="SumOrder">מחיר כללי:</p>
                </div>
                <div class="col btn-bar">
                    <button class="btn-pay" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">לתשלום</button>
                  </div>
                <!--<a type = "button" href="#" class = "CardLink" id = "CardLink">לתשלום</a>-->
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                        <header class="modal-header">
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </header>
                        <div class="modal-body"> 
                          <div class="details-container">
                                <div class = "frame">
                                    <h1 style ="text-align: center;"> סיכום הזמנה</h1>
                                    <ul class = "products"></ul>
                                    <li class = "products-item">דגכעדגע</li>
                                </div>
                                
                            <div class="row mb-4">
                            <div class="col-md-6 d-flex justify-content-between">
                            </div>
                    
                            <div class="col-md-6 d-flex justify-content-end">
                            </div>
                        </div>
                      </div>
                    </div> 
                  </div>
                </div>
              </div>
