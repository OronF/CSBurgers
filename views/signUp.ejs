    <body>
        <section class="vh-100 bg-image"
  style="background-image: url('./images/pagesImgs/sign-up-page-background.png');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3 register-container">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                            <h2 class="sign-up-title text-center">הרשמה לאתר</h2>
                            <p class="text-center">כבר יש לכם משתמש? <a href="/logInPage"
                            class="text-body"><u>התחברו כאן</u></a></p>


                        <form action="/">
                          <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" placeholder="שם משפחה" id="lname" class="form-control form-control-lg" required />
                                        <div class="error" id="lnameError"></div>

                                    </div>
                                </div>
                            
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" placeholder="שם פרטי" id="fname" class="form-control form-control-lg" required />
                                        <div class="error" id="fnameError"></div>

                                    </div>
                                </div>
                
                            <div class="form-outline mb-4">
                                <input type="tel" id="phone-number" onkeydown="phoneNumberFormatter()" placeholder="מספר טלפון" class="form-control form-control-lg"  required />
                                <div class="error" id="phoneNumberError"></div>

                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" id="passowrdInput" placeholder="סיסמה"  id="form3Example4cg" class="form-control form-control-lg" required />
                                <div class="error" id="passwordError"></div>

                            </div>
          
                          <div class="form-outline mb-4">
                            <input type="password"  id="confirmPassowrdInput" placeholder="אישור סיסמה" id="form3Example4cdg" class="form-control form-control-lg" required />
                            <div class="error" id="approvePasswordError"></div>

                          </div>
          
                          <div class="row justify-content-center checkBoxes">
                                <div class="col-md-6 mb-4 ">
                                    <div class="form-check mb-4">
                                        
                                        <label for="checkbox-input" class="checkBox">                                     
                                            <input type="checkbox" id="form2Example32" value="" required>
                                            <span>
                                            אני מסכימ\ה ל<a href="#!" class="text-body"><u>תנאי השימוש</u></a></label>
                                        </span>

                                        <div class="error"id="termsError"></div>

                                    </div>
                                </div>
        
                                <div class="col-md-6 mb-4">
                                    <div class="form-check mb-4">
                                        <label for="checkbox-input">מאשר\ת קבלת פרסומות</label>
                                        <input type="checkbox" id="form2Example33" value=""  class="checkBox" required>
                                    </div>
                                </div>
                          </div>

                          
                          <div class="d-flex justify-content-center ">
                            <a type="button"
                              class="approve btn btn-lg gradient- custom-4" id="approveBtn">אישור</a>
                          </div>

                          </div>
                        </form>
          
                      </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</section>
