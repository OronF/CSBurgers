<body>
    <a href="/" class="btn-back"> 
        <i class="bi bi-arrow-bar-right"></i> לחזרה לעמוד הבית</a>

    <h1 class="title">אזור אישי</h1>
    <div class="row">
      <div class="card-body card" id ="client-info" style="width: 18rem;">
          <h2 class="card-title">פרטי משתמש:</h2>
          <div class = "info list-group list-group-flush">
            <p class="SomeInfo" id = "fname">שם פרטי:</p>
            <p class="SomeInfo" id = "lname">שם משפחה:</p>
            <p class="SomeInfo" id = "phoneNumber">מספר טלפון:</p>
          </div>
          <div class="buttons">
            <button class="update-btn btn btn-success"><i id="update-icon" class="bi bi-pencil-fill"></i></button>
            <button class="delete-btn btn btn-danger"><i class="bi bi-x-lg"></i></button>
          </div>
      </div>

      <div class="card-body card" id ="client-orders" style="width: 18rem;">
          <h2 class="card-title">הזמנות קודמות:</h2>
          <input type="text" class="search form-control-sm" id="searchOrder" placeholder="לחיפוש הזמנה...">
          <div class="selections">
            <select id="priceSelect" class="form-select form-select-lg">
              <option value="0" disabled selected>מחיר</option>
              <option value="100">100</option>
              <option value="200">200</option>
              <option value="300">300</option>
              <option value="400">400</option>
              <option value="500">500</option>
            </select>
            <select id="framework" class="form-select form-select-lg select-branch"></select>
            <select id="numOfProduct" class="form-select form-select-lg">
              <option value="0" disabled selected>מספר מוצרים</option>
              <option value="3">3</option>
              <option value="5">5</option>
              <option value="7">7</option>
              <option value="10">10</option>
            </select>
          </div>
        <ul class="order-list"> </ul>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
